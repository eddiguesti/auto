# Security: Enforce lockfile integrity
package-lock=true
save-exact=true

# Require package-lock.json to be in sync
# Fails if lockfile is out of sync with package.json
engine-strict=true

# Audit packages on install
audit=true

# Don't run arbitrary scripts from packages during install
ignore-scripts=false

# Prevent lifecycle scripts from untrusted packages
# Run `npm config set ignore-scripts true` for stricter security
